{
  "manifest_version": 2,
  "name": "Shopify Theme Switcher",
  "version": "0.1",
  "description": "Save and switch themes rapidly on Shopify stores",
  "icons": { "128": "icon-128.png" },
  "background": {
    "persistent": false,
    "scripts": ["bg.js"]
  },
  "permissions": ["https://*.google.com/", "storage"],
  "browser_action": {
    "default_title": "",
    "default_icon": "icon-19.png",
    "default_popup": "popup.html"
  }
}